{
  "name": "journalme",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:backend": "npm --workspace @journalme/backend run dev",
    "dev:frontend": "npm --workspace @journalme/frontend run dev",
    "build": "npm run build --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "test:backend": "cd packages/backend && npx vitest --run -c vitest.config.ts",
    "test:frontend": "cd packages/frontend && npx vitest --run -c vitest.config.ts",
    "test": "npm run test:backend && npm run test:frontend"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "prettier": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
