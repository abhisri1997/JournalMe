{
  "name": "@journalme/backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --prefer-ts-exts src/index.ts",
    "dev:debug": "ts-node-dev --inspect --respawn --transpile-only --prefer-ts-exts src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest",
    "test:integration": "cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5432/journalme_test npm run prisma:migrate --silent && cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5432/journalme_test jest --runInBand",
    "prisma:generate": "prisma generate --schema ../../prisma/schema.prisma",
    "prisma:migrate": "prisma migrate deploy --schema ../../prisma/schema.prisma",
    "prepare": "prisma generate --schema ../../prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.4",
    "nodemailer": "^7.0.11",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^7.0.4",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "jest": "^29.0.0",
    "prisma": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.3.3"
  }
}
